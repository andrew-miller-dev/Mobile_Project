<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/cardview_dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProp"
            android:layout_width="309dp"
            android:layout_height="219dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/house_example" />

        <TextView
            android:id="@+id/txtDatePosted"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:text="Date Posted: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtPropType"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Property Type: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Address: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="City: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtState"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="State: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtSquareFeet"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Square Footage: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtBathrooms"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Bathrooms: "
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtBedrooms"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Bedrooms: "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Price:"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txtUtilities"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Utilities Included: None"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtPetFriendly"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Pet Friendly: No"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnCallLandlord"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_marginLeft="100dip"
                android:layout_marginRight="100dip"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="20dip"
                android:backgroundTint="@color/teal_700"
                android:text="Call Landlord" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>